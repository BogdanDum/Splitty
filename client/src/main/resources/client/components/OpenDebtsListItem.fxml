<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>

<HBox alignment="CENTER_LEFT" onMouseClicked="#onEventClicked" prefHeight="35.0" prefWidth="355.0" styleClass="eventListItemContainer" stylesheets="@EventListItem.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.components.OpenDebtsListItem">
   <children>
      <ComboBox fx:id="expandableView" prefWidth="25.0" />
      <Label fx:id="participantLabel" prefHeight="17.0" prefWidth="199.0" text="Label" HBox.hgrow="ALWAYS">
         <HBox.margin>
            <Insets right="10.0" />
         </HBox.margin>
      </Label>
      <Button id="removeEventButton" mnemonicParsing="false" text="X">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <HBox.margin>
            <Insets left="5.0" right="5.0" />
         </HBox.margin>
      </Button>
      <Button id="downloadEventButton" mnemonicParsing="false" text="V">
         <HBox.margin>
            <Insets left="5.0" right="5.0" />
         </HBox.margin>
      </Button>
      <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="143.0" text="%OpenDebtsListItem.markRecieved" />
   </children>
   <padding>
      <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
   </padding>
   <cursor>
      <Cursor fx:constant="HAND" />
   </cursor>
</HBox>
