<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="backgroundAnchorpane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.AdminLoginCtrl">
   <HBox prefWidth="600.0" styleClass="navbar">
      <padding>
         <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
      </padding>
      <children>
         <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="titleFont" text="%AdminLogin.title" />
      </children>
   </HBox>
    <PasswordField fx:id="passwordTextField" layoutX="198.0" layoutY="213.0" promptText="%AdminLogin.enterPassword" styleClass="ntextfield" />
    <Button fx:id="loginButton" layoutX="365.0" layoutY="213.0" mnemonicParsing="false" onAction="#loginButtonClicked" styleClass="pbutton" text="%AdminLogin.loginBtn" />
    <Label layoutX="198.0" layoutY="187.0" styleClass="labelFont" text="%AdminLogin.passwordLabel" />
    <Button layoutX="14.0" layoutY="83.0" mnemonicParsing="false" onAction="#backButtonClicked" styleClass="sbutton" text="%AdminLogin.backBtn" />
   <Label fx:id="warningLabel" layoutX="198.0" layoutY="244.0" styleClass="errorText" text="%AdminLogin.incorrectPassword" textFill="RED" />
    <stylesheets>
        <URL value="@client/scenes/global.css" />
    </stylesheets>
</AnchorPane>
