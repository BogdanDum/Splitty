            </Text>
            <HBox alignment="CENTER_RIGHT" prefHeight="53.0" prefWidth="363.0" HBox.hgrow="ALWAYS">
               <children>
                  <GridPane prefHeight="53.0" prefWidth="330.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="172.71429443359375" minWidth="10.0" percentWidth="40.0" prefWidth="145.00003487723214" />
                      <ColumnConstraints hgrow="SOMETIMES" maxWidth="126.85711669921875" minWidth="10.0" percentWidth="15.0" prefWidth="103.85709926060267" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="126.85711669921875" minWidth="10.0" percentWidth="5.0" prefWidth="20.0" />
