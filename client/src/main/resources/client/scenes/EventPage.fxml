                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="debtsPageButton" mnemonicParsing="false" onAction="#openDebtsPage" styleClass="sbutton" text="%EventPage.openDebts" />
