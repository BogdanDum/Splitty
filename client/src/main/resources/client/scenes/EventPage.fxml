                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <VBox alignment="CENTER_LEFT" GridPane.columnIndex="3">
                           <children>
                              <Label fx:id="inviteCode" onMouseClicked="#inviteCodeClicked" text="Invite code: ABCDE">
                                 <cursor>
                                    <Cursor fx:constant="HAND" />
                                 </cursor>
                              </Label>
                              <Label fx:id="copiedToClipboardMsg" text="%EventPage.copiedToClipboard" />
                           </children>
                        </VBox>
                        <HBox alignment="CENTER" prefHeight="53.0" prefWidth="122.0">
